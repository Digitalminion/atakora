{
  "name": "atakora",
  "version": "0.0.2",
  "private": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build && npm run build:cli && npm run postbuild",
    "build:cli": "cd packages/cli && npm run build",
    "postbuild": "node scripts/copy-dist.js",
    "build:clean": "tsc --build --clean && npm run clean:cli",
    "clean:cli": "cd packages/cli && npm run clean",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "coverage": "npm run coverage --workspace=@atakora/lib",
    "typecheck": "tsc --noEmit",
    "quality": "npm run format:check && npm run lint && npm run typecheck",
    "quality:fix": "npm run format && npm run lint:fix",
    "prepare": "husky",
    "prepublishOnly": "npm run quality && npm run build && npm test",
    "version": "npm run format && git add -A",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@digital-minion/cli": "^1.4.2",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "constructs": "^10.4.2",
    "openapi-types": "^12.1.3",
    "yaml": "^2.8.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
