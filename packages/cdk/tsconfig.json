{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "../../dist/cdk",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "tsBuildInfoFile": "../../dist/cdk/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@atakora/lib": ["../lib/src/index.ts"],
      "@atakora/cdk": ["./src/index.ts"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "../lib"
    }
  ]
}
