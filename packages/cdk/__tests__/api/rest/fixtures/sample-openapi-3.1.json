{
  "openapi": "3.1.0",
  "info": {
    "title": "Sample API (OpenAPI 3.1)",
    "version": "2.0.0",
    "description": "OpenAPI 3.1 test specification with new features",
    "license": {
      "name": "MIT",
      "identifier": "MIT"
    }
  },
  "jsonSchemaDialect": "https://json-schema.org/draft/2020-12/schema",
  "servers": [
    {
      "url": "https://api.example.com/v2"
    }
  ],
  "paths": {
    "/users/{userId}": {
      "get": {
        "operationId": "getUserV2",
        "summary": "Get user (OpenAPI 3.1)",
        "tags": ["users"],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": ["id", "email"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "name": {
            "type": ["string", "null"],
            "description": "OpenAPI 3.1 supports null as a type"
          }
        }
      }
    }
  }
}
