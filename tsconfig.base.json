{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@atakora/lib": ["./packages/lib/src/index.ts"],
      "@atakora/cli": ["./packages/cli/src/index.ts"],
      "@atakora/cdk": ["./packages/lib/cdk/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
